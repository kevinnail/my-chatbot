{
  "name": "Devflow Assistant",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node -r dotenv/config server.js",
    "start:watch": "nodemon -r dotenv/config server.js",
    "start:mcp": "node mcp-server.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest --verbose --runInBand --testLocationInResults --setupFiles dotenv/config --passWithNoTests --forceExit",
    "test:watch": "npm run test -- --watch",
    "setup-db": "node -r dotenv/config setup-db.js",
    "setup-test-db": "node -r dotenv/config setup-test-db.js"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ],
    "globalTeardown": "<rootDir>/jest-teardown.js",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/*.test.js",
      "!**/node_modules/**"
    ],
    "reporters": [
      "default",
      [
        "error-affirmations",
        {
          "colorTheme": "driven",
          "borderTheme": "simple"
        }
      ]
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "googleapis": "^152.0.0",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "error-affirmations": "^1.2.7",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  }
}
